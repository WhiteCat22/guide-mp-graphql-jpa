<server description="Sample Liberty server">

  <featureManager>
    <feature>cdi-2.0</feature>
    <feature>jaxrs-2.1</feature>
    <feature>mpGraphQL-1.0</feature>
    <feature>mpOpenAPI-1.0</feature>
  </featureManager>

  <variable name="default.http.port" defaultValue="9090"/>
  <variable name="default.https.port" defaultValue="944"/>

  <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}"
    id="defaultHttpEndpoint" host="*" />

  <application location="CarDealershipFrontend.war" context-root="/">
  	<classloader apiTypeVisibility="+third-party"/>
  </application>

  <logging traceSpecification="*=info:com.ibm.ws.jaxrs*=all:org.apache.cxf.*=all"/>
</server>
